<%- include('partials/header'); -%>
<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitle">Post Title</label>
        <input type="text" name="postTitle" class="form-control" id="postTitle" placeholder="Your Post Title" required>
    </div>
    <div class="form-group">
        <label for="textarea">Post</label>
        <textarea class="form-control" name="postContent" id="textarea" rows="5" placeholder="Your post here"></textarea required>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include('partials/footer'); -%>